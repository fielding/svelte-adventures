span
  font-weight 600
  color #fff

.card
  color #ffffff
  background-color #313131
  border-radius 0.5em
  margin 1em
  padding 1.1255em 1.125em 0.75em 1em

.card p
  font-size 0.875em
  text-align left

.card button
  color #ffffff
  background-color #959595
  font-size 0.75em
  font-weight 500
  height 2.5em
  padding 0.75em 1.5em
  text-transform unset
  border none
  border-radius 0.5em
  white-space nowrap
  line-height 1.3
  margin 1em auto

.row
  display flex
  justify-content space-between

.row span
  padding 0.75em 0 1.125em 0

.rowEvenly
  display flex
  justify-content space-evenly

.column
  display flex
  flex-direction column

.column span:last-child
  font-size 0.75em
  font-weight 400

.logo
  width 13.5625em
  height 7.5625em
  display block
  margin 1.75em auto 1.125em

.pill
  width 19.4375em
  background-color #181818
  border-radius 2em
  justify-content space-evenly
  padding 0.6875em 0 0.8125em
  margin 1em auto

.pill span
  padding 0

input[type='checkbox']
  height 0
  width 0
  visibility hidden
  display none

input[type='checkbox']:checked + label
  background-color #ff3dac

input[type='checkbox']:checked + label:after
  left 100%
  -webkit-transform translate(-100%)
  transform translate(-100%)

label
  cursor pointer
  width 3.25em
  height 2em
  font-size 16px
  background #dfdfdf
  display block
  border-radius 2em
  position relative
  margin-top 0.375em
  transition .3s

label:active:after
  width 2em

label:after
  content ''
  position absolute
  top 0
  left 0
  width 2em
  height 2em
  background #fff
  border-radius 1em
  transition 0.3s
  box-shadow 0px 4px 16px rgba(0, 0, 0, 0.25)

h2
  font-weight 500
  font-size 1.125em /* 18px with parent font-size 16px */
  color #ffffff
  text-transform initial
  margin-top 1em /* same as this elements font-size */
  margin-bottom 1em


