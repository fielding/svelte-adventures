h5
	display inline-block
	padding 0
	margin-top 0
	font-size 0.688em
	font-weight 500
	line-height 1.25

.title
	font-weight 500
	font-size 1.125em // 18px @ 16px
	color #ffffff
	text-transform initial
	margin 2.5em 0 -.25em

.transfer
	background-color transparent
	color inherit
	border none
	font-size 0.875em
	font-weight 700
	height 2em
	width calc(50% - 3px)
	padding 0
	text-rendering geometricPrecision

	&:nth-of-type(2)
		border-left 1.5px solid rgb(51, 51, 51) // fallback
		border-left 1.5px solid rgba(255, 255, 255, .2)

