{
	"settings": {
		"react": {
			"pragma": "createElement",
			"version": "16.4.2"
		}
	},
	"globals": {
		"_": true,
		"VIDY_API": true,
		"VIDY_STATIC": true,
		"VIDY_RELEASE": true,
		"VIDY_DASHBOARD": true,
		"VIDY_IFRAME": true
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"spread": true,
			"arrowFunctions": true
		}
	},
	"plugins": ["react", "jest"],
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:import/warnings",
		"plugin:react/recommended"
	],
	"rules": {
		"quotes": ["error", "single", { "allowTemplateLiterals": true }],
		"semi": ["error", "always"],
		"no-cond-assign": "warn",
		"import/namespace": 0,
		"react/jsx-uses-vars": 1,
		"react/no-children-prop": 0,
		"no-console": 0,
		"eqeqeq": ["error", "always"],
		"react/prop-types": 0,
		"react/display-name": 0,
		"react/no-unknown-property": 0,
		"react/no-deprecated": 0,
		"react/jsx-key": 0,
		"no-unused-vars": ["error", { "argsIgnorePattern": "_" }],
		"no-unreachable": 1,
		"no-var": "error"
	}
}
